// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model quadro {
  id        String    @id @default(uuid())
  nome      String
  idUsuario String
  colunas   coluna[]
  ususario  ususario? @relation(fields: [idUsuario], references: [id])

  @@map("quadros")
}

model coluna {
  id       String   @id @default(uuid())
  nome     String
  idQuadro String
  tarefas  tarefa[]
  quadro   quadro   @relation(fields: [idQuadro], references: [id])

  @@map("colunas")
}

model tarefa {
  id                String   @id @default(uuid())
  titulo            String
  descricao         String
  dataParaConclusao DateTime
  nivelPrioridade   Int
  idColuna          String
  coluna            coluna   @relation(fields: [idColuna], references: [id])

  @@map("tarefas")
}

model ususario {
  id       String   @id @default(uuid())
  nome     String
  email    String   @unique
  telefone String
  senha    String
  quadros  quadro[]

  @@map("usuarios")
}
